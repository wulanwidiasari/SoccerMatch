<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/playTitleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/playTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soccer Match Score"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="7px"
            android:textColor="#fdf08f"
            android:background="#e23f0d"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/homeTeamCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#a3aeff"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Team"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="8px"
                    android:textColor="#faee8f"
                    android:background="#001d7e"/>

                <ImageView
                    android:id="@+id/homeLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teamlogo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="#a3aeff"/>

                <TextView
                    android:id="@+id/homeScore"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="32pt"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/addHomeScore"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_goal"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a3aeff"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/addHomeYellow"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_yellow_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a3aeff"
                        android:layout_weight="2"/>

                    <ImageButton
                        android:id="@+id/addHomeRed"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_red_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a3aeff"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="#70121b"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/awayTeamCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#a2e0b6"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/awayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Away Team"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="8px"
                    android:textColor="#fcef8f"
                    android:background="#02443e"/>

                <ImageView
                    android:id="@+id/awayLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teamlogo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="#a2e0b6"/>

                <TextView
                    android:id="@+id/awayScore"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="32pt"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/addAwayScore"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_goal"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a2e0b6"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/addAwayYellow"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_yellow_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a2e0b6"
                        android:layout_weight="2"/>

                    <ImageButton
                        android:id="@+id/addAwayRed"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_red_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#a2e0b6"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/timeShowCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/timerShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textSize="12pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/matchStartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:enabled="true"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_btn"/>

        <Button
            android:id="@+id/matchFinishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:background="@drawable/round_btn"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>